pipeline {
    agent {
        kubernetes {
            yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: docker
    image: docker:20.10.21
    command:
    - /bin/sh
    args:
    - -c
    - while true; do sleep 30; done
    tty: true
    volumeMounts:
    - name: docker-sock
      mountPath: /var/run/docker.sock
  volumes:
  - name: docker-sock
    hostPath:
      path: /var/run/docker.sock
      type: Socket
            """
        }
    }
    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    def ecrRepo = "508058148115.dkr.ecr.us-east-1.amazonaws.com/${JOB_NAME}"
                    def imageTag = "latest"
                    echo "Building ${ecrRepo}:${imageTag}"
                    docker
                    docker.build("${ecrRepo}:${imageTag}")
                }
            }
        }
        stage('Push to ECR') {
            steps {
                withAWS(region: 'us-east-1', credentials: 'aws-credentials') {
                    script {
                        def ecrRepo = "your-account-id.dkr.ecr.us-east-1.amazonaws.com/${JOB_NAME}"
                        def imageTag = "latest"
                        echo "Psuing ${ecrRepo}:${imageTag}"
                        docker.withRegistry("https://${ecrRepo}") {
                            docker.image("${ecrRepo}:${imageTag}").push()
                        }
                    }
                }
            }
        }
    }
}