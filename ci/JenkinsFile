pipeline {
    agent {
         kubernetes {
            yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: docker
    image: 508058148115.dkr.ecr.us-east-1.amazonaws.com/jenkins:latest
    command:
    - /bin/sh
    - -c
    args:
    - while true; do sleep 30; done
    tty: true
    volumeMounts:
    - mountPath: /var/run/docker.sock
      name: docker-sock
  volumes:
  - name: docker-sock
    hostPath:
      path: /var/run/docker.sock
            """
        }
    }
    stages {
        stage('Test') {
            steps {
                sh 'docker --version'
            }
        }
    }
}
