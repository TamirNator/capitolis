pipeline {
    agent {
        docker {
            image '508058148115.dkr.ecr.us-east-1.amazonaws.com/jenkins:1.4'
            args  '--user root -v /var/run/docker.sock:/var/run/docker.sock'
        }
    }
    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    def ecrRepo = "508058148115.dkr.ecr.us-east-1.amazonaws.com/${JOB_NAME}"
                    def imageTag = "latest"
                    echo "Building ${ecrRepo}:${imageTag}"
                    docker.build("${ecrRepo}:${imageTag}")
                }
            }
        }
        stage('Push to ECR') {
            steps {
                withAWS(region: 'us-east-1', credentials: 'aws-credentials') {
                    script {
                        def ecrRepo = "your-account-id.dkr.ecr.us-east-1.amazonaws.com/${JOB_NAME}"
                        def imageTag = "latest"
                        echo "Psuing ${ecrRepo}:${imageTag}"
                        docker.withRegistry("https://${ecrRepo}") {
                            docker.image("${ecrRepo}:${imageTag}").push()
                        }
                    }
                }
            }
        }
    }
}