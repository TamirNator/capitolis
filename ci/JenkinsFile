pipeline {
    agent {
         docker {
            image '508058148115.dkr.ecr.us-east-1.amazonaws.com/jenkins:latest'
            args  '--user root -v /var/run/docker.sock:/var/run/docker.sock'
        }
    stages {
        stage('Build Docker Image') {
            steps {
                container('docker') {
                    sh 'docker --version'
                    sh 'docker build -t my-image:latest .'
                }
            }
        }
    }
}